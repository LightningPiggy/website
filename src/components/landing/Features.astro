---
import SectionHeading from '../ui/SectionHeading.astro';
import Card from '../ui/Card.astro';

const svg = (d: string) => `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${d}" /></svg>`;
const svg2 = (paths: string) => `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">${paths}</svg>`;

const features = [
  {
    icon: svg('M13 10V3L4 14h7v7l9-11h-7z'),
    title: 'Lightning Native',
    description: 'Instant, low-cost, permissionless Bitcoin payments. Receive sats in seconds via QR code.',
  },
  {
    icon: svg('M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z'),
    title: 'No Subscription Fees',
    description: 'Simple, low-cost hardware with no ongoing fees. Own it forever.',
  },
  {
    icon: svg('M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'),
    title: 'Open Source',
    description: 'Free and open source software. Inspect the code, modify it, make it yours.',
  },
  {
    icon: svg('M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1'),
    title: 'Flexible Wallets',
    description: 'Connect to LNbits for self-custody or use Nostr Wallet Connect with any compatible wallet.',
  },
  {
    icon: svg2('<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v4a1 1 0 001 1h3" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12v5a2 2 0 002 2h6a2 2 0 002-2v-5" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 12h3a1 1 0 001-1V7" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 7l-9-4-9 4" />'),
    title: 'Low Power',
    description: 'Can be battery or solar powered. Perfect for a desk, shelf, or bedside table.',
  },
  {
    icon: svg('M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'),
    title: 'Kid Friendly',
    description: 'Simple, intuitive interface designed for ages 4-100. Visual balance display kids love.',
  },
];
---

<section class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeading
      title="Built for families"
      subtitle="Everything you need to teach the next generation about sound money."
    />

    <div class="mt-16 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <Card icon={feature.icon} title={feature.title}>
          {feature.description}
        </Card>
      ))}
    </div>
  </div>
</section>

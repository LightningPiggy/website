---
interface Props {
  title?: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200 ${className}`}>
  {icon && (
    <div class="w-12 h-12 bg-pink-light/50 rounded-xl flex items-center justify-center mb-4 text-pink">
      <Fragment set:html={icon} />
    </div>
  )}
  {title && (
    <h3 class="text-lg font-semibold text-gray-900 mb-2">{title}</h3>
  )}
  <div class="text-gray-600">
    <slot />
  </div>
</div>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import creditsData from '../../data/credits.json';

// Helper to extract username and avatar from various URL formats
function parseProfile(name: string, url?: string, avatar?: string): { displayName: string; username: string; avatar: string; url?: string } {
  const cleanName = name.replace(/^⭐️\s*/, '').trim();

  // If avatar is explicitly provided, use it
  if (avatar) {
    return { displayName: cleanName, username: cleanName, avatar, url };
  }

  if (!url) {
    return { displayName: cleanName, username: cleanName, avatar: '' };
  }

  // Twitter URLs
  const twitterMatch = url.match(/twitter\.com\/([^\/\?]+)/i);
  if (twitterMatch) {
    return {
      displayName: cleanName,
      username: `@${twitterMatch[1]}`,
      avatar: `https://unavatar.io/twitter/${twitterMatch[1]}`,
      url
    };
  }

  // Fallback - no avatar
  return {
    displayName: cleanName,
    username: cleanName,
    avatar: '',
    url
  };
}

const { coreTeam = [], contributors = [], specialThanks = [] } = creditsData;
---

<BaseLayout title="Credits" description="The team and contributors behind Lightning Piggy">
  <section class="py-12 md:py-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="mb-12 text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Credits</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We extend our heartfelt gratitude to everyone who has played a role in bringing this little piggy to market.
        </p>
      </header>

      <!-- Core Team -->
      {coreTeam.length > 0 && (
        <section class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Core Team</h2>
          <p class="text-gray-600 mb-6">Those who have taken on a voluntary role and are actively making a significant contribution of their time to the project.</p>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4">
            {coreTeam.map((person) => {
              const profile = parseProfile(person.name, person.url, person.avatar);
              return (
                <a
                  href={profile.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-white rounded-xl border border-gray-200 p-4 text-center hover:shadow-lg hover:border-pink transition-all group"
                >
                  <div class="w-16 h-16 mx-auto mb-3 rounded-full bg-gray-100 overflow-hidden">
                    {profile.avatar ? (
                      <img
                        src={profile.avatar}
                        alt={profile.displayName}
                        class="w-full h-full object-cover"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                      />
                    ) : null}
                    <div class="w-full h-full bg-pink/10 flex items-center justify-center text-pink text-xl font-bold" style={profile.avatar ? "display: none;" : ""}>
                      {profile.displayName.charAt(0).toUpperCase()}
                    </div>
                  </div>
                  <h3 class="font-semibold text-gray-900 group-hover:text-pink transition-colors text-sm">{profile.displayName}</h3>
                  <p class="text-xs text-gray-500 mt-1">{person.contribution}</p>
                </a>
              );
            })}
          </div>
        </section>
      )}

      <!-- Contributors -->
      {contributors.length > 0 && (
        <section class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Contributors</h2>
          <p class="text-gray-600 mb-6">Volunteers who have contributed their expertise and knowledge to help develop the project.</p>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
            {contributors.map((person) => {
              const profile = parseProfile(person.name, person.url, person.avatar);
              return (
                <div
                  class={`bg-white rounded-xl border border-gray-200 p-4 text-center transition-all ${profile.url ? 'hover:shadow-lg hover:border-pink group cursor-pointer' : ''} ${person.isBitcoinKid ? 'ring-2 ring-yellow-400' : ''}`}
                >
                  {profile.url ? (
                    <a href={profile.url} target="_blank" rel="noopener noreferrer" class="block">
                      <div class="w-14 h-14 mx-auto mb-3 rounded-full bg-gray-100 overflow-hidden relative">
                        {profile.avatar ? (
                          <img
                            src={profile.avatar}
                            alt={profile.displayName}
                            class="w-full h-full object-cover"
                            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                          />
                        ) : null}
                        <div class="w-full h-full bg-pink/10 flex items-center justify-center text-pink text-lg font-bold" style={profile.avatar ? "display: none;" : ""}>
                          {profile.displayName.charAt(0).toUpperCase()}
                        </div>
                      </div>
                      <h3 class="font-semibold text-gray-900 group-hover:text-pink transition-colors text-sm">
                        {person.isBitcoinKid && <span class="mr-1">⭐️</span>}
                        {profile.displayName}
                      </h3>
                      <p class="text-xs text-gray-500 mt-1">{person.contribution}</p>
                    </a>
                  ) : (
                    <>
                      <div class="w-14 h-14 mx-auto mb-3 rounded-full bg-pink/10 flex items-center justify-center text-pink text-lg font-bold">
                        {profile.displayName.charAt(0).toUpperCase()}
                      </div>
                      <h3 class="font-semibold text-gray-900 text-sm">
                        {person.isBitcoinKid && <span class="mr-1">⭐️</span>}
                        {profile.displayName}
                      </h3>
                      <p class="text-xs text-gray-500 mt-1">{person.contribution}</p>
                    </>
                  )}
                </div>
              );
            })}
          </div>
          <p class="text-sm text-gray-500 mt-4">⭐️ = Bitcoin Kids</p>
        </section>
      )}

      <!-- Special Thanks -->
      {specialThanks.length > 0 && (
        <section class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Special Thanks To...</h2>
          <div class="space-y-3">
            {specialThanks.map((item) => (
              <div class="bg-white rounded-lg border border-gray-200 p-4 hover:shadow-md transition-shadow">
                <a href={item.url} target="_blank" rel="noopener noreferrer" class="font-semibold text-pink hover:underline">
                  {item.name}
                </a>
                <span class="text-gray-600"> — {item.note}</span>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- The Spark -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">The Spark</h2>
        <div class="bg-gradient-to-r from-pink/5 to-yellow/5 rounded-2xl p-6 border border-gray-200">
          <p class="text-gray-700 leading-relaxed">
            Lightning Piggy was born in an Amsterdam bar during Bitcoin 2022. Bitcoin3us was looking for an LNbits developer to build the first lightning enabled piggy bank for a <a href="http://www.bolt.fun/" target="_blank" rel="noopener" class="text-pink hover:underline">Bolt.fun</a> competition that was running at the time. BlackCoffee had been meaning to build something similar for his kids and that's how Lightning Piggy entered the world.
          </p>
        </div>
      </section>

      <!-- Want to Contribute -->
      <section class="text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Want to Contribute?</h2>
        <p class="text-gray-600 mb-6">
          Lightning Piggy is open source and we welcome contributions!
        </p>
        <a
          href="https://github.com/LightningPiggy"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 bg-pink text-white px-6 py-3 rounded-full font-semibold hover:bg-pink/90 transition-colors"
        >

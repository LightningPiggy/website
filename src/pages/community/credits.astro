import BaseLayout from '../../layouts/BaseLayout.astro';
import creditsData from '../../data/credits.json';

// Helper to extract username and avatar from various URL formats
function parseProfile(name: string, url?: string, avatar?: string, nostrUrl?: string, xUrl?: string): { displayName: string; username: string; avatar: string; url?: string; nostrUrl?: string; xUrl?: string } {
  const cleanName = name.replace(/^⭐️\s*/, '').trim();

  // If avatar is explicitly provided, use it
  if (avatar) {
    return { displayName: cleanName, username: cleanName, avatar, url, nostrUrl, xUrl };
  }

  if (!url) {
    return { displayName: cleanName, username: cleanName, avatar: '', nostrUrl, xUrl };
  }

  // Twitter URLs - try to get avatar
  const twitterMatch = url.match(/twitter\.com\/([^\/\?]+)/i) || url.match(/x\.com\/([^\/\?]+)/i);
  if (twitterMatch) {
    return {
      displayName: cleanName,
      username: `@${twitterMatch[1]}`,
      avatar: `https://unavatar.io/twitter/${twitterMatch[1]}`,
      url,
      nostrUrl,
      xUrl
    };
  }

  // Fallback - no avatar
  return {
    displayName: cleanName,
    username: cleanName,
    avatar: '',
    url,
    nostrUrl,
    xUrl
  };
}

const { coreTeam = [], contributors = [], specialThanks = [] } = creditsData;
